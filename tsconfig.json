{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["ES2022", "DOM"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noEmit": true,
		"noImplicitAny": true
	},
	"include": ["src/**/*", "test/**/*"],
	"exclude": ["node_modules", "test-results", "test-reports", "force-app"]
}
